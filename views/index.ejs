<!DOCTYPE html>
<html>
    
    <body>
       
        <h1>Pokedex Home</h1>
        <nav>
            <a href="/pokemon/new">Add a new Pokemon</a>
        </nav>
        <ul>
            <% for(let i = 0; i < data.length; i++){ %>

                <li>
                    <a href="/pokemon/<%= i %>">
                    <img src=
                     "<%= data[i].img %>"
                        alt="" >
                        </a>
                        <a href="/pokemon/<%= i %>">
                            <h3><%= data[i].name %></h3>
                                </a>
                               
                    
                        <form action="/pokemon/<%= i %>?_method=DELETE" method="POST">
                        <input type="submit" value="DELETE">
                    </form>
                    <a href="/pokemon/<%= i %>/edit">EDIT</a>
                </li>

            <% } %>
        </ul>
       
    </body>
</html>